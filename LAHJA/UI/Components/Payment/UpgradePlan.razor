    <MudPaper Class="p-3" >
        <MudText Typo="Typo.body1">@string.Format(LocalizedContent["PaymentDue"], "Dec 15, 2024")</MudText>
        <MudText Typo="Typo.h6">$@price</MudText>
    </MudPaper>


<div Class="container" MaxWidth="MaxWidth.Large">
    <MudPaper Elevation="0" Class="pa-4 d-flex flex-column  justify-content-center align-items-center">
@*         <MudTypography Variant="h3" Align="Align.Center" GutterBottom="true">
            الأسئلة الشائعة (FAQ)
        </MudTypography> *@
        <MudText Typo="Typo.h3">
            الأسئلة الشائعة (FAQ)

        </MudText>
        <MudExpansionPanels>
            @foreach (var item in FAQItems)
            {
                <MudExpansionPanel Text="@item.Question">
                    <MudText>
                        @item.Answer
                    </MudText>
                </MudExpansionPanel>
            }
        </MudExpansionPanels>
    </MudPaper>
</div>

@code {


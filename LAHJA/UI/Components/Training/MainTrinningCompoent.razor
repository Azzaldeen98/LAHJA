@using MudBlazor

<FormTrainning />
<MudContainer MaxWidth="MaxWidth.Large" Class="pa-4">

    <MudGrid>
        <MudItem xs="12" Class="text-right">
            <MudButton Variant="Variant.Text" OnClick="ToggleLanguage">
                @languageSwitcherText
            </MudButton>
        </MudItem>
    </MudGrid>


    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.h4" Align="Align.Center" Style="color: #0056b3;">@title</MudText>
        </MudItem>

        <MudItem xs="4">
            <MudCard Class="pa-3">
                <MudText Typo="Typo.subtitle1" Class="mb-2">@bestScoreText</MudText>
                <MudText Typo="Typo.h5" Align="Align.Center" Style="color: #4CAF50;">@metrics.BestScore</MudText>
            </MudCard>
        </MudItem>
        <MudItem xs="4">
            <MudCard Class="pa-3">
                <MudText Typo="Typo.subtitle1" Class="mb-2">@restoredEpochText</MudText>
                <MudText Typo="Typo.h5" Align="Align.Center">@metrics.RestoredEpoch</MudText>
            </MudCard>
        </MudItem>
        <MudItem xs="4">
            <MudCard Class="pa-3">
                <MudText Typo="Typo.subtitle1" Class="mb-2">@stoppedEpochText</MudText>
                <MudText Typo="Typo.h5" Align="Align.Center">@metrics.StoppedEpoch</MudText>
            </MudCard>
        </MudItem>

        <MudItem xs="6">
            <MudCard Class="pa-3">
                <MudText Typo="Typo.subtitle1" Class="mb-2">@validationLossText</MudText>
                <MudChart ChartType="ChartType.Bar" ChartSeries="@Series" Class="ma-2" Style="height: 250px;" />
            </MudCard>
        </MudItem>
        <MudItem xs="6">
            <MudCard Class="pa-3">
                <MudText Typo="Typo.subtitle1" Class="mb-2">@accuracyText</MudText>
                <MudChart ChartType="ChartType.StackedBar" ChartSeries="@Serieserutey" Class="ma-2" Style="height: 250px;" />
            </MudCard>
        </MudItem>

        <MudItem xs="12">
            <MudCard Class="pa-3">
                <MudText Typo="Typo.subtitle1" Class="mb-2">@accuracyVsValidationLossText</MudText>
                <MudChart ChartType="ChartType.Line" ChartSeries="@Seriess" Width="100%" Height="350px" />
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {

    [Parameter]

    public bool currentLanguage { get; set; } = true;
    private string title;
    private string bestScoreText;
    private string restoredEpochText;
    private string stoppedEpochText;
    private string validationLossText;
    private string accuracyText;
    private string accuracyVsValidationLossText;
    private string languageSwitcherText;



    private Metrics metrics = new Metrics
        {
            BestScore = 0.9332024,
            RestoredEpoch = 17,
            StoppedEpoch = 22
        };


    public List<ChartSeries> Series = new List<ChartSeries>()
   {
       new ChartSeries() { Name = "United States", Data = new double[] { 2.0, 1.8, 1.6, 1.4, 1.2, 1.0 } }

   };
    public List<ChartSeries> Serieserutey = new List<ChartSeries>()
   {
       new ChartSeries() { Name = "United States", Data = new double[] {40, 20, 25, 27, 46, 60, 48, 80, 15 } }

   };
    public List<ChartSeries> Seriess = new List<ChartSeries>()
    {
        new ChartSeries() { Name = "Fossil", Data = new double[] { 90, 79, 72, 69, 62, 62, 55, 65, 70 } },
        new ChartSeries() { Name = "Renewable", Data = new double[] { 10, 41, 35, 51, 49, 62, 69, 91, 148 } },
    };

    protected override void OnInitialized()
    {
        SetLanguage();
    }

    private void ToggleLanguage()
    {

        SetLanguage();
    }

    private void SetLanguage()
    {
        if (!currentLanguage)
        {
            title = "تدريب أفضل نموذج";
            bestScoreText = "أفضل نتيجة";
            restoredEpochText = "العصر المستعاد";
            stoppedEpochText = "العصر المتوقف";
            validationLossText = "فقدان التحقق";
            accuracyText = "الدقة";
            accuracyVsValidationLossText = "الدقة مقابل فقدان التحقق";
            languageSwitcherText = "English";
        }
        else
        {
            title = "Best Model Training";
            bestScoreText = "Best Score";
            restoredEpochText = "Restored Epoch";
            stoppedEpochText = "Stopped Epoch";
            validationLossText = "Validation Loss";
            accuracyText = "Accuracy";
            accuracyVsValidationLossText = "Accuracy vs Validation Loss";
            languageSwitcherText = "العربية";
        }
        StateHasChanged();
    }


    public class Metrics
    {
        public double BestScore { get; set; }
        public int RestoredEpoch { get; set; }
        public int StoppedEpoch { get; set; }
    }
}

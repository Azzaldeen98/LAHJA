@using LAHJA.Data.UI.Components.Base

<section class="pt-0">
    <div class="container">
        @if (Params != null)
        {
            <div class="bg-dark position-relative rounded-4 overflow-hidden p-4 p-sm-6" data-bs-theme="dark">
                <!-- Grad decoration -->
            <div class="position-absolute top-0 end-0 mt-n6">
                <img src="assets/images/elements/grad-shape/blur-decoration.svg" class="blur-8 opacity-3" alt="Grad shape">
            </div>

            <div class="row g-4 align-items-center position-relative">
                <!-- Title and list -->
                <div class="col-lg-6">
                    <h2 class="mb-3">
                        @Params.Name
                      <span class="text-purple">AI Chatbot</span></h2>
                    <p class="mb-4">
                        @Params.Description
                        </p>
                    <a href="pricing-v1.html" class="btn btn-outline-secondary mb-0">
                        @Params.ButtonLink
                        </a>
                </div>

                <!-- Button -->
                <div class="col-lg-6 position-absolute end-0 top-0 mt-n3 me-n5 d-none d-lg-block">
                    <img src="assets/images/chatbot-cta.png" style="width: 46%; margin-left: 50%;" alt="">
                </div>
            </div>
        </div>
        }
    </div>
</section>

@code{
    [Parameter] public CaerdSevicisIcon? Params { set; get; }


    // CaerdSevicisIcon? carddecoration;
    protected override void OnInitialized()
    {

        Params = new CaerdSevicisIcon()
            {
                Name = "Experience the Power of",
                Description = "Our AI chatbot offers enhancing customer satisfaction and boosting your business efficiency.",
                ButtonLink = "Start free trial",
            }; 

            }
    
}
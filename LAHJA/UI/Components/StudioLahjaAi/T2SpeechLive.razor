                    </MudCardContent>
                    <MudCardActions>
                        <audio id="audioPlayer" controls @onplay="OnPlay" @onended="OnEnded" @onpause="OnPause" style="width:100%;margin:2%"></audio>
                    </MudCardActions>
                </MudCard>


            </div>

        </div>

